[alias]
    ss = status -s
    sb = status -b
    cmt = commit -v
    cmsg = commit -m

    pl = pull --rebase
    p = rebase -i @{u}

    co = checkout
    dc = diff --cached

    adog = log --all --decorate --oneline --graph
    ls = log --pretty='format:%C(yellow)%h %Cred%d %Creset%s %Cblue[%cn]'
    ldn = log --pretty='format:%C(yellow)%h %Creset%<(50,trunc)%s %Cgreen%<(10,trunc)%ad %Cblue%an  %Cred%d' --date=relative
    filelog = log -u

    la = "!git config -l | grep alias | cut -c 7-"
